<!-- head -->
<%- include('./layouts/head',{pageTitle}) %>
<!-- header -->

<%- include('./layouts/header',{categories}) %>
<!--	Slider	-->
<%- include('./layouts/slider') %>
                
                <!--	List Product	-->
                <div id="product">
                	<div id="product-head" class="row">
                    	<div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                        	<img src="../uploads/images/products/<%= product.thumbnail %>">
                        </div>
                        <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                        	<h1><%= product.name %></h1>
                            <ul>
                            	<li><span>Bảo hành:</span> <%= product.warranty %></li>
                                <li><span>Đi kèm:</span><%= product.accessories %></li>
                                <li><span>Tình trạng:</span><%= product.status %></li>
                                <li><span>Khuyến Mại:</span><%= product.promotion %></li>
                                <li id="price">Giá Bán (chưa bao gồm VAT)</li>
                                <li id="price-number"><%= product.price.toLocaleString('vi', {style: 'currency', currency: 'VND'}) %></li>
                                <li id="status" class="<%= product.is_stock?'text-primary':'text-danger' %>"><%= product.is_stock?'Còn Hàng':'Hết Hàng' %></li>
                            </ul>
                            <div id="add-cart"><a href="#">Mua ngay</a></div>
                        </div>
                    </div>
                    <div id="product-body" class="row mb-2">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3><%= product.name %></h3>
                            <p>
                                <%= product.description %>
                            </p>
                          
                        </div>
                    </div>
                    
                    <!--	Comment	-->
                    <div id="comment" class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <h3>Bình luận sản phẩm</h3>
                            <form method="post">
                                <div class="form-group">
                                    <label>Tên:</label>
                                    <input name="comm_name" required type="text" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label>Email:</label>
                                    <input name="comm_mail" required type="email" class="form-control" id="pwd">
                                </div>
                                <div class="form-group">
                                    <label>Nội dung:</label>
                                    <textarea name="comm_details" required rows="8" class="form-control"></textarea>     
                                </div>
                                <button type="submit" name="sbm" class="btn btn-primary">Gửi</button>
                            </form> 
                        </div>
                    </div>
                    <!--	End Comment	-->  
                    
                    <!--	Comments List	-->
                    <div id="comments-list" class="row">
                    	<div class="col-lg-12 col-md-12 col-sm-12">
                            <% for( let comment of comments ) { %>
                                <div class="comment-item">
                                <ul>
                                    <li><b><%= comment.full_name %></b></li>
                                    <li><%=moment(comment.createdAt).fromNow() %></li>
                                    <li>
                                        <p><%= comment.body %></p>
                                    </li>
                                </ul>
                            </div>
                            <% } %>

                                
                
                        </div>
                    </div>
                    <!--	End Comments List	-->
                </div>
                <!--	End Product	--> 

